<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="NOT Registered"
        android:textColor="#009688"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="You Are not a member Yet, Do you have an account?"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnLogin"
        android:text="LOGIN"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:backgroundTint="#45A6A1"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/btn_filled_green"
        android:fontFamily="sans-serif-medium"/>

    <Button
        android:id="@+id/btnSignup"
        android:text="SIGNUP"
        android:textAllCaps="true"
        android:textColor="#45A6A1"
        android:background="@drawable/btn_outline_green"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-medium"/>
</LinearLayout>
