                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pure"
                    android:textColor="#780000" />
                <!-- معلومات مختصرة -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:text="(1012416)"
